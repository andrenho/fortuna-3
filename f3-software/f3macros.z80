		out	(Qb0), a
	endmacro

	macro set_Qb1, value
		ld	a, \value
		out	(Qb1), a
	endmacro

	macro set_Pa, value
		ld	a, (\value) & 0xff
		out	(Pa0), a
		ld	a, (\value) / 0x100
		out	(Pa1), a
	endmacro

	macro set_Pa_from_DE
		ld	a, e
		out	(Pa0), a
		ld	a, d
		out	(Pa1), a
	endmacro

	macro set_Pb, value
		ld	a, (\value) & 0xff
		out	(Pb0), a
		ld	a, (\value) / 0x100
		out	(Pb1), a
	endmacro

	macro set_Pb_from_A
		out	(Pb0), a
		ld	a, 0
		out	(Pb1), a
	endmacro

	macro set_Pb_from_DE
		ld	a, e
		out	(Pb0), a
		ld	a, d
		out	(Pb1), a
	endmacro

	macro set_Qa, value
		ld	a, (\value) & 0xff
		out	(Qa0), a
