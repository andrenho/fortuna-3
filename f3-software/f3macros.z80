	include fortuna3.z80

	macro set_Pa0, value
		ld	a, \value
		out	(Pa0), a
	endmacro

	macro set_Pa1, value
		ld	a, \value
		out	(Pa1), a
	endmacro

	macro set_Pb0, value
		ld	a, \value
		out	(Pb0), a
	endmacro

	macro set_Pb1, value
		ld	a, \value
		out	(Pb1), a
	endmacro

	macro set_Qa0, value
		ld	a, \value
		out	(Qa0), a
	endmacro

	macro set_Qa1, value
		ld	a, \value
		out	(Qa1), a
	endmacro

	macro set_Qb0, value
