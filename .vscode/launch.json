    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Start Backend",
            "request": "launch",
            "mainClass": "com.fortuna3.fortuna3.Fortuna3Application",
            "projectName": "fortuna-3",
            "vmArgs": "-DprojectPath='debugger/sample-project/my-project.json'"
        },
        {
            "command": "npm start",
            "name": "Start Frontend",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/debugger/fortuna3-dbg"
        },
        {
            "command": "npm run storybook",
            "name": "Start Storybook",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/debugger/fortuna3-dbg"
        }
    ]
}